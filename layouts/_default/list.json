{{- $posts := slice -}}
{{- range .Site.RegularPages -}}
  {{- if eq .Type "posts" -}}
    {{- $post := dict
      "title" .Title
      "url" .Permalink
      "permalink" .Permalink
      "summary" .Summary
      "content" .Content
      "excerpt" (truncate 200 .Summary)
      "tags" .Params.tags
      "subtitle" .Params.subtitle
      "mood" .Params.mood
      "readingTime" .ReadingTime
      "wordCount" .WordCount
      "featured" .Params.featured
      "slug" .File.BaseFileName
    -}}
    {{- $posts = $posts | append $post -}}
  {{- end -}}
{{- end -}}
{{- $posts | jsonify -}}
